#!/bin/bash
# {{ ansible_managed }}

ACTION="$1"

{% if private_node %}
if [[ "$ACTION" == "home" ]]; then
	xrandr --output eDP-1 --primary --mode 1920x1080 --rotate normal --output HDMI-1 --off --output HDMI-2 --off --output DP-1 --mode 3440x1440 --rotate normal --left-of eDP-1 --output DP-2 --off --output DP-1-1 --off --output DP-1-2 --off --output DP-1-3 --off

elif [[ "$ACTION" == "hdmi" ]]; then
	xrandr --output eDP-1 --primary --mode 2560x1440 --rotate normal --output HDMI-1 --mode 3840x2160 --rotate normal --above eDP-1 --output HDMI-2 --off --output DP-1 --off --output DP-2 --off --output DP-1-1 --off --output DP-1-2 --off --output DP-1-3 --off

elif [[ "$ACTION" == "laptop" ]]; then
	xrandr --output eDP-1 --primary --mode 2560x1440 --rotate normal --output DP-1 --off --output HDMI-1 --off --output DP-2 --off --output HDMI-2 --off --output DP-1-1 --off --output DP-1-2 --off --output DP-1-3 --off

fi
{% else %}
if [[ "$ACTION" == "home" ]]; then
	xrandr --output eDP-1-1 --primary --mode 1920x1200 --rotate normal --output DP-1-1 --mode 3440x1440 --rotate normal --left-of eDP-1-1 --output DP-1-2 --off --output DP-1-3 --off

elif [[ "$ACTION" == "laptop" ]]; then
	xrandr --output eDP-1-1 --primary --mode 1920x1200 --rotate normal --output DP-1-1 --off --output DP-1-2 --off --output DP-1-3 --off

fi
{% endif %}
